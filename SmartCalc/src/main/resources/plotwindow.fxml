<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: rgb(50, 50, 50);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musatov.smartcalc.view.plot.PlotWindowControllerImpl">
   <children>
      <LineChart fx:id="lineChart" styleClass="plotchart" stylesheets="@chart.css">
        <xAxis>
          <NumberAxis side="BOTTOM" tickLabelFill="WHITE" fx:id="xAxis" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxis" side="LEFT" tickLabelFill="WHITE" />
        </yAxis>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </LineChart>
      <GridPane fx:id="gridPane" hgap="10.0" style="-fx-background-color: rgb(80, 80, 80);" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="84.0" minWidth="10.0" prefWidth="49.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="135.0" minWidth="10.0" prefWidth="128.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="replotButton" mnemonicParsing="false" onAction="#replotButtonClick" prefWidth="80.0" styleClass="red_button" stylesheets="@button.css" text="Replot" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowSpan="2" GridPane.valignment="CENTER" />
            <Button fx:id="calculateButton" mnemonicParsing="false" onAction="#calculateButtonClick" prefWidth="80.0" styleClass="red_button" stylesheets="@button.css" text="Calculate" GridPane.columnIndex="5" GridPane.halignment="CENTER" GridPane.rowSpan="2" GridPane.valignment="CENTER" />
            <TextField alignment="CENTER" focusTraversable="false" onKeyReleased="#limitsChanged" promptText="Xmin" style="-fx-background-color: rgb(50, 50, 50); -fx-text-fill: white;" fx:id="xMinField" />
            <TextField fx:id="yMinField" alignment="CENTER" focusTraversable="false" onKeyReleased="#limitsChanged" promptText="Ymin" style="-fx-background-color: rgb(50, 50, 50); -fx-text-fill: white;" GridPane.columnIndex="1" />
            <TextField alignment="CENTER" focusTraversable="false" onKeyReleased="#limitsChanged" promptText="Xmax" style="-fx-background-color: rgb(50, 50, 50); -fx-text-fill: white;" GridPane.rowIndex="1" fx:id="xMaxField" />
            <TextField fx:id="yMaxField" alignment="CENTER" focusTraversable="false" onKeyReleased="#limitsChanged" promptText="Ymax" style="-fx-background-color: rgb(50, 50, 50); -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField alignment="CENTER" focusTraversable="false" onKeyReleased="#xValueEntered" promptText="Enter X value" style="-fx-background-color: rgb(50, 50, 50); -fx-text-fill: white;" GridPane.columnIndex="4" fx:id="xValueField" />
